<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">修改餐廳</h5>
          <hr>
          <form method="POST" action="/restaurants/{{restaurant._id}}/edit">
            <div class="form-group form-row">
              <label for="name" class="col-md-4 col-form-label">
                <i class="fas fa-store"></i> 餐廳名稱
              </label>
              <div class="col-md-8">
                <input type="text" name="name" class="form-control" id="name" value="{{restaurant.name}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="name_en" class="col-md-4 col-form-label">
                <i class="fas fa-book"></i> 英文名稱
              </label>
              <div class="col-md-8">
                <input type="text" name="name_en" class="form-control" id="name_en" value="{{restaurant.name_en}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-4 col-form-label">
                <i class="fas fa-utensils pr-2"></i>餐廳類別
              </label>
              <div class="col-md-8">
                <input type="text" name="category" class="form-control" id="category" value="{{restaurant.category}}">
              </div>
            </div>
            <div class="form-group form-row">
              <label for="location" class="col-md-4 col-form-label">
                <i class="fas fa-map-marker-alt pr-2"></i>餐廳地址
              </label>
              <div class="col-md-8">
                <input type="text" name="location" class="form-control" id="location" value="{{restaurant.location}}">
              </div>
            </div>
            <div class="form-group form-row">
              <label for="phone" class="col-md-4 col-form-label">
                <i class="fas fa-mobile-alt pr-2"></i>餐廳電話
              </label>
              <div class="col-md-8">
                <input type="text" name="phone" class="form-control" id="phone" value="{{restaurant.phone}}">
              </div>
            </div>
            <div class="form-group form-row">
              <label for="image" class="col-md-4 col-form-label">
                <i class="fas fa-camera"></i> 餐廳照片
              </label>
              <div class="col-md-8">
                <input type="text" name="image" class="form-control" id="image" value="{{restaurant.image}}">
              </div>
            </div>
            <div class="form-group form-row">
              <label for="rating" class="col-md-4 col-form-label">
                <i class="fas fa-star"></i> 餐廳評等
              </label>
              <div class="col-md-8">
                <input type="number" name="rating" class="form-control" id="rating" min="0" max="5" step="0.1" value={{restaurant.rating}}>
              </div>
            </div>
            <div class="form-group form-row">
              <label for="description" class="col-md-4 col-form-label">
                餐廳描述
              </label>
              <div class="col-md-8">
                <textarea class="form-control" id="description" rows="3" name="description">{{{restaurant.description}}}</textarea>
              </div>
            </div>

            <button class="btn btn-success" type="submit">提交餐廳</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>